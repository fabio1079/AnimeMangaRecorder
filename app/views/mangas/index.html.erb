<h1 class="text-center">Listing mangas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Volume</th>
      <th>Chapter</th>
      <th>Chapter title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mangas.each do |manga| %>
      <tr>
        <td><%= manga.title %></td>
        <td><%= manga.volume %></td>
        <td><%= manga.chapter %></td>
        <td><%= manga.chapter_title %></td>
        <td><%= link_to 'Show', manga, :class=>"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_manga_path(manga), :class=>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', manga, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Manga', new_manga_path, :class=>"btn btn-success" %>
