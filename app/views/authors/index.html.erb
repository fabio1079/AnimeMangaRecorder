<h1 class="text-center">Listing authors</h1>

<%= link_to 'New Author', new_author_path, :class=>"btn btn-success" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Show', author, :class=>"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_author_path(author), :class=>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, :class=>"btn btn-success" %>
